# Guru Configuration

# Environment
NODE_ENV=development

# Storage Backend (unified = SurrealDB embedded)
GURU_STORAGE_BACKEND=unified

# SurrealDB Configuration (embedded)
SURREALDB_PATH=.guru/surrealdb
SURREALDB_NAMESPACE=guru
SURREALDB_DATABASE=main

# DuckDB Configuration (analytics)
DUCKDB_PATH=.guru/analytics.db

# Application Configuration
PORT=3000
WEBSOCKET_PORT=3001
LOG_LEVEL=info

# Security
JWT_SECRET=your-secret-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# DPCM Configuration
DPCM_DEFAULT_RADIUS=0.35
DPCM_MAX_RESULTS=50
DPCM_QUALITY_THRESHOLD=0.6

# Performance
WORKER_POOL_SIZE=8
CHUNK_SIZE=25
MAX_FILE_SIZE=2097152

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9464

# Features
ENABLE_REAL_TIME_ANALYSIS=true
ENABLE_PATTERN_PREDICTION=false
ENABLE_WEB_UI=true

# Optional: External Analytics
# DUCKDB_USE_HTTP=true
# DUCKDB_SERVER_URL=http://localhost:8080